<Window x:Class="TempsAnalyzer.Views.ExportDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Options d'export PDF" 
        Height="380" 
        Width="485"
        WindowStartupLocation="CenterOwner"
        Background="#F3F8FC"
        FontFamily="Segoe UI" 
        FontSize="13">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Titre -->
        <TextBlock Grid.Row="0" 
                  Text="Sélectionnez le type de regroupement pour l'export PDF :" 
                  FontWeight="Bold" 
                  Margin="0,0,0,15" 
                  FontSize="16"
                  Foreground="#0D47A1"/>

        <!-- Options de regroupement -->
        <StackPanel Grid.Row="1" Margin="10,0">
            <RadioButton x:Name="RdoSemaine" 
                        Content="Par semaine (regroupement hebdomadaire)" 
                        Margin="0,5,0,10" 
                        IsChecked="True"
                        GroupName="TypeRegroupement"/>

            <RadioButton x:Name="RdoMois" 
                        Content="Par mois (regroupement mensuel)" 
                        Margin="0,5,0,10"
                        GroupName="TypeRegroupement"/>

            <RadioButton x:Name="RdoAnnee" 
                        Content="Par année (regroupement annuel)" 
                        Margin="0,5,0,10"
                        GroupName="TypeRegroupement"/>
        </StackPanel>

        <!-- Options supplémentaires -->
        <StackPanel Grid.Row="2">
            <CheckBox x:Name="ChkGraphiques" 
                     Content="Inclure les graphiques" 
                     IsChecked="True" 
                     Margin="0,5"/>

            <CheckBox x:Name="ChkTableaux" 
                     Content="Inclure les tableaux" 
                     IsChecked="True" 
                     Margin="0,5"/>
        </StackPanel>

        <!-- Boutons d'action -->
        <StackPanel Grid.Row="3" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Right" 
                   Margin="0,20,0,0">

            <Button x:Name="BtnExporter" 
                   Content="Exporter" 
                   Foreground="White"
                   Background="#1976D2"
                   FontWeight="Bold"
                   Padding="20,8"
                   BorderThickness="0"
                   Margin="0,0,10,0"
                   Click="BtnExporter_Click"/>

            <Button x:Name="BtnAnnuler" 
                   Content="Annuler" 
                   Padding="20,8"
                   BorderThickness="1"
                   Click="BtnAnnuler_Click"/>
        </StackPanel>
    </Grid>
</Window>