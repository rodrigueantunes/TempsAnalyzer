<Window x:Class="TempsAnalyzer.Views.ProgressDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#80000000"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        Topmost="True"
        ShowActivated="True">
    <Border Background="White" Padding="40" CornerRadius="12" BorderBrush="#1976D2" BorderThickness="2">
        <StackPanel>
            <TextBlock Text="Chargement des ressources en cours..."
                       FontWeight="Bold"
                       FontSize="18"
                       Foreground="#1976D2"
                       Margin="0 0 0 20"
                       TextAlignment="Center"/>
            <ProgressBar IsIndeterminate="True" Height="18" Width="280"/>
        </StackPanel>
    </Border>
</Window>
