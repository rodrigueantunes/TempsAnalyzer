<Window x:Class="TempsAnalyzer.Views.WorkDaySettingsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Durée d'une journée"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        Background="#F3F8FC"
        FontFamily="Segoe UI"
        FontSize="13">

    <!-- ─────────── Styles locaux (les mêmes que dans MainWindow) ─────────── -->
    <Window.Resources>

        <!-- Boutons bleus « primary » réutilisables -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Foreground"      Value="White"/>
            <Setter Property="Background"      Value="#1976D2"/>
            <Setter Property="FontWeight"      Value="Bold"/>
            <Setter Property="Padding"         Value="6,4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width"           Value="100"/>
        </Style>

        <!-- L’unique TextBox, sobre mais accordée -->
        <Style TargetType="TextBox">
            <Setter Property="Width"           Value="60"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush"     Value="#1976D2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontWeight"      Value="Bold"/>
        </Style>

        <!-- Libellés bleus foncés, même code que pour vos totaux -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#0D47A1"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

    </Window.Resources>

    <!-- ─────────── Mise en page ─────────── -->
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Zone saisie -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,20">
            <TextBlock Text="Durée par défaut (h) :" VerticalAlignment="Center" Margin="0,0,12,0"/>
            <TextBox Text="{Binding GlobalHoursPerDay,
                                    Mode=TwoWay,
                                    UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>

        <!-- Boutons OK / Annuler -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="OK"
                    IsDefault="True"
                    Command="{Binding SaveCmd}"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Margin="0,0,8,0"/>
            <Button Content="Annuler"
                    IsCancel="True"
                    Style="{StaticResource PrimaryButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>
