<Application x:Class="TempsAnalyzer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:TempsAnalyzer.Converters"
             xmlns:local="clr-namespace:TempsAnalyzer.Helpers" 
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:BoolToGreenConverter x:Key="BoolToGreenConverter" />
        <converters:BoolToVisibilityInverseConverter x:Key="BoolToVisibilityInverseConverter" />
        <converters:BooleanMultiVisibilityConverter x:Key="BooleanMultiVisibilityConverter" />
        <converters:ClientCheckboxConverter x:Key="ClientCheckboxConverter" />
        <converters:DateColumnVisibilityConverter x:Key="DateColumnVisibilityConverter" />
        <converters:DateOrWeekConverter x:Key="DateOrWeekConverter" />
        <local:BooleanToLogoTextConverter x:Key="BooleanToLogoTextConverter" />
        <!-- Utilisation de l'espace de noms local -->
    </Application.Resources>
</Application>
